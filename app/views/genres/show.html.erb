<h1>Find artists that are <strong>SIMILAR</strong> to:</h1>
<% cache("genre-#{params[:id]}") do %>
  <div id="grid">
    <div class="row">
      <ul>
        <% @artists.each do |artist| %>
          <div class="col-lg-3" id="related_artists">
            <li>
              <%= link_to image_tag(Echowrap.artist_images(name: artist.name).last.url, :class => 'img-rounded', :size => '300x300'), artist_path(artist.name) %></li>
              <li><%= link_to artist.name, artist_path(artist.name), :style => 'color:white;' %>
            </li>
          </div>
        <% end %>
      </ul>
    </div>
  </div>
<% end %>
