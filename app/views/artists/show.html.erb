<script type="text/javascript">
  $(function() {
    $('.primary-nav a').on('click', function(e) {
      var className = e.target.dataset.selector;
      if (className === "top") {
        var selector = $(document);
        selector.scrollTop();
      } else {
        var selector = $('.' + className);
        $('body').animate({
          scrollTop: selector.offset().top
        }, 1000);
      }
    });
  });
</script>
