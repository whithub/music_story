
<section class="name-title">
  <%# if @artist_images != nil %>
    <img class="img-circle" <%= image_tag(@artist_images.first.url, :class => 'list_image', :size => '350x350') %>
  <%# else %>
    <!--<img class="img-circle" <%#= image_tag(@profile_pic['url'], :class => 'list_image', :size => '350x350') %>-->
  <%# end %>
  <!--<img class="headshot" src="assets/images/billy_profile.jpg" alt="photo of artist">-->
  <h1 class="container"><%= @artist.name %></h1>

  <%= link_to "Find similiar artists to #{@artist.name}", artist_similar_artists_path(@artist.name) %>
  <div class="arrow-contain">
    <a class="next-arrow" href="#about">
      <%= image_tag("arrow-white.png", :class => 'list_image', :size => '40x40') %>

      <!--<img src="assets/images/arrow-white.png" alt="down arrow">-->
    </a>
  </div>
</section>

<section class="background_image" id="about">
  <%#= image_tag(@artist_images.last.url) %>
</section>

  <% cache("#{@artist.name}-bio") do %>

    <section class="about">
      <h3>BIO</h3>
      <div class="text" id="artist-bio">
        <%= @artist_bio.text %>
      </div>
      <div class="arrow-contain">
        <a class="next-arrow" href="#music-videos">
          <%= image_tag("arrow-blue.png", :class => 'list_image', :size => '40x40') %>
        </a>
      </div>
    </section>

    <section class="background_image_1" id="professional"></section>

  <% end %>

  <% cache("#{@artist.name}-videos") do %>

    <section class="connect" id="music-videos">
      <h3>MUSIC VIDEOS</h3>
      <div id="grid">
        <div class="row">
          <ul>
            <% @videos.each do |video| %>
              <div class="col-lg-3" id="related_artists">
                <li>
                  <%= link_to image_tag(video.image_url, :id => 'music-videos', :title => video.title, :size => '150x150'), video.url %>
                  <%#= video.title %>
                </li>
              </div>
            <% end %>
          </ul>
        </div>
      </div>
      <div class="arrow-contain">
        <a class="next-arrow" href="#professional">
          <%= image_tag("arrow-white.png", :class => 'list_image', :size => '40x40') %>
        </a>
      </div>
    </section>

    <section class="background_image_2" id="professional"></section>
  <% end %>

  <% cache("#{@artist.name}-reviews") do %>

    <section class="about">
      <h3>ARTIST REVIEWS</h3>
      <% @reviews.each do |review| %>
        <h4><%= review.date_found.to_time.strftime('%B %d, %Y') %></h4>

        <div class="text" id="artist-reviews">
          <%= review.summary %>
          <%#= @artist_news.summary %>
        </div>
      <% end %>
      <div class="arrow-contain">
        <a class="next-arrow" href="#professional">
          <%= image_tag("arrow-blue.png", :class => 'list_image', :size => '40x40') %>
        </a>
      </div>
    </section>


