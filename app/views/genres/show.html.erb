
<div id="grid">
  <div class="row">
    <ul>
      <% @artists.each do |artist| %>
        <div class="col-lg-4" id="related_artists">
          <li>
            <%= link_to image_tag(Echowrap.artist_images(name: artist.name).last.url, :class => 'img-circle', :size => '120x120'), artist_path(artist.name) %>
            <%= link_to artist.name, artist_path(artist.name), :style => 'color:white;' %>
          </li>
        </div>
      <% end %>
    </ul>
  </div>
</div>
