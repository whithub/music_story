  <% cache("#{@artist.name}-social-media") do %>

    <section class="connect">
      <h3>Stay Connected with <%= @artist.name %>!</h3>
      <h4> </h4>
        <div class="stay-connected">
          <% if @twitter_handle != nil %>
              <%= link_to image_tag("twitter-icon.png", :class => 'list_image', :size => '60x60') %>
              <%#= link_to "Visit Twitter Page", "https://twitter.com/#{@twitter_handle}", :style => 'color:white;' %>
            <!--<ul>Start Following: <%#= link_to "@#{@twitter_handle}", current_user.follow_artist(@twitter_handle), :style => 'color:white;' %></ul>-->
          <% end %>

          <% if @websites.official_url != nil %>
              <%= link_to image_tag("band-site-icon.png", :class => 'list_image', :size => '60x60') %>
              <%#= link_to "#{@artist.name}'s Website", @websites.official_url, :style => 'color:white;' %>
          <% end %>

          <% if @websites.wikipedia_url != nil %>
              <%= link_to image_tag("wiki-icon.png", :class => 'list_image', :size => '60x60') %>
              <%#= link_to "Learn more about #{@artist.name}", @websites.wikipedia_url, :style => 'color:white;' %>
          <% end %>

          <% if @websites.itunes_url != nil %>
              <%= link_to image_tag("itunes-icon.png", :class => 'list_image', :size => '60x60') %>
              <%#= link_to "Buy Music", @websites.itunes_url, :style => 'color:white;' %>
          <% end %>

          <% if @spotify_artist != nil %>
              <%= link_to image_tag("spotify-icon.png", :class => 'list_image', :size => '60x60') %>
              <%#= link_to "Spotify", @spotify_website, :style => 'color:white;' %>
          <% end %>

          <% if @websites.amazon_url != nil %>
              <%= link_to image_tag("amazon-icon.png", :class => 'list_image', :size => '60x60') %>
              <%#= link_to "Purchase!", @websites.amazon_url, :style => 'color:white;' %>
          <% end %>
        </div>
    </section>

  <% end %>

